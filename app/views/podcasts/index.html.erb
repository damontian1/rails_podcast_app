<div id="banner" class="podcasts_banner">
	<h1>Discover your new favorite podcast</h1>
</div>

<div id="podcasts" class="cf">
	<div class="wrapper">
		<ul class="cf">
		<% @podcasts.each do |podcast| %>
			<%= link_to podcast do %>
				<li>
						<%= image_tag podcast.thumbnail.url(:thumb) %>
						<div class="podcast_overview">
							<h2><%= truncate(podcast.title, length: 28) %></h2>
							<p class="episode_count">1 Episode</p>
						</div>
					</li>
			<% end %>
		<% end %>