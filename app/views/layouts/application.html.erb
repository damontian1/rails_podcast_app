<!DOCTYPE html>
<html>
<head>
  <title>RailsPodcastApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'application', href: "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if notice %>
	<div id="notice_wrapper">
		<p class="notice">
			<%= notice %>
		</p>
	</div>
<% elsif alert %>
	<div id="alert_wrapper">
		<p class="alert">
			<%= alert %>
		</p>
	</div>
<% end %>

<% if !current_page?(root_path) %>
	<%= render "layouts/header" %>
<% end %>

<%= yield %>

<script type="text/javascript">
		setTimeout(function(){
			$('#notice_wrapper').fadeOut("slow", function(){
				$this.remove();
			})
		}, 3000);
</script>
</body>
</html>
