<!DOCTYPE html>
<html>
<head>
  <title>RailsPodcastApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'application', href: "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if notice %>
	<p class="notice">
		<%= notice %>
	</p>
<% elsif alert %>
	<p class="alert">
		<%= alert %>
	</p>
<% end %>

<% if !current_page?(root_path) %>
	<%= render "layouts/header" %>
<% end %>

<%= yield %>

</body>
</html>
